    "def detect_distro():\n",
    "    params = {}\n",
    "    with open('/etc/os-release', 'r') as f:\n",
    "        for line in f.readlines():\n",
    "            key, value = line.strip().split('=')\n",
    "            params[key] = value.strip('\"\"')\n",
    "    return params['ID'], params['VERSION_ID']"
   ]

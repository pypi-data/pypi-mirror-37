!INTERFILE :=
name of data file := {{ spec.path_sinogram }}
originating system := USERDEFINED
!GENERAL DATA :=
!GENERAL IMAGE DATA :=
!type of data := PET 
imagedata byte order := LITTLEENDIAN
!PET STUDY (General) := 
!PET data type := Emission
applied corrections := None
!number format := float
!number of bytes per pixel := 4
number of dimensions := 4
matrix axis label [4] := segment
!matrix size [4] := {{ 2 * spec.nb_rings *spec.nb_crystal_axial - 1 }}
matrix axis label [2] := view
!matrix size [2] := {{ spec.nb_detectors_per_ring // 2 }}
matrix axis label [3] := axial coordinate
!matrix size [3] := {{spec.axial_coordinate }}
matrix axis label [1] := tangential coordinate
!matrix size [1] := {{ spec.nb_detectors_per_ring // 2 }}
minimum ring difference per segment := {{spec.ring_difference }}
maximum ring difference per segment := {{spec.ring_difference }}
Scanner parameters:=
Scanner type := USERDEFINED
Number of rings                          := {{ spec.nb_rings*spec.nb_crystal_axial }}
Number of detectors per ring             := {{ spec.nb_detectors_per_ring }}
Inner ring diameter (cm)                 := {{ spec.inner_radius*2 / 10.0 }}
Average depth of interaction (cm)        := 0.07
Distance between rings (cm)              := {{ "%.3f"|format(spec.ring_distance / 10.0) }}
Default bin size (cm)                    := {{ "%.3f"|format(spec.ring_distance / 20.0) }}
View offset (degrees)                    := 0
Maximum number of non-arc-corrected bins := {{ spec.nb_detectors_per_ring // 2 }}
Default number of arc-corrected bins     := {{ spec.nb_detectors_per_ring // 2 }}
Number of blocks per bucket in transaxial direction         := {{ spec.nb_blocks_per_ring }}
Number of blocks per bucket in axial direction              := 1
Number of crystals per block in axial direction             := {{ spec.nb_crystal_axial }}
Number of crystals per block in transaxial direction        := {{ spec.nb_crystal_transaxial }}
Number of detector layers                                   := 1
Number of crystals per singles unit in axial direction      := 1
Number of crystals per singles unit in transaxial direction := 1
end scanner parameters:=
effective central bin size (cm) := {{ "%.3f"|format(spec.central_bin_size / 10.0) }}
image scaling factor[1] := 1
data offset in bytes[1] := 0
number of time frames := 1
!END OF INTERFILE :=

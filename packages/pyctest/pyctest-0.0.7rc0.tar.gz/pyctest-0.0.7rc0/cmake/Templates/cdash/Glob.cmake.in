
if(EXISTS "${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")
    include("${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")
endif(EXISTS "${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")

if(EXISTS "${CMAKE_CURRENT_LIST_DIR}/Init.cmake")

    set(CTEST_TRIGGER "None" CACHE STRING 
        "Delay submit until CTEST_TRIGGER == '(Any|Build|Test|Coverage|MemCheck|None)'")

    include("${CMAKE_CURRENT_LIST_DIR}/Init.cmake")
    include_if("PyCTestPostInit.cmake")

    message(STATUS "Starting ${MODEL} Glob - ${CTEST_BUILD_NAME} --")
    
    include("${CMAKE_CURRENT_LIST_DIR}/Build.cmake")
    # CDashTest.cmake is essentially called in CDashCoverage
    include_if("${CMAKE_CURRENT_LIST_DIR}/Coverage.cmake"
        "${CMAKE_CURRENT_LIST_DIR}/Test.cmake")
    include_if("${CMAKE_CURRENT_LIST_DIR}/MemCheck.cmake")
    include("${CMAKE_CURRENT_LIST_DIR}/Submit.cmake")
    
    message(STATUS "Finished ${MODEL} Glob - ${CTEST_BUILD_NAME} --")

endif(EXISTS "${CMAKE_CURRENT_LIST_DIR}/Init.cmake")
    
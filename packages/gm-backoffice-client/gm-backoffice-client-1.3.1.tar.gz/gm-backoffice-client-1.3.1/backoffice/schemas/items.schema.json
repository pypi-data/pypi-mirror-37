{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "GM order items",
    "description": "Used to put an order to our backoffice system",
    "type": "array",
    "items": [
        {
            "description": "order item",
            "type": "object",
            "properties": {
                "product": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Product name as customer has seen"
                        },
                        "site_id": {
                            "type": ["number", "string"],
                            "description": "The id of the item in our catalog"
                        }
                    }
                },
                "quantity": {
                    "type": "number",
                    "description": "product quantity (1 by default)"
                },
                "price": {
                    "type": ["number", "string"],
                    "description": "Price per single unit (as customer has seen)"
                },
                "customer_comment": {
                    "type": "string",
                    "description": "Customer comment for this item"
                }
            },
            "required": [
                "product"
            ]
        }
    ]
}

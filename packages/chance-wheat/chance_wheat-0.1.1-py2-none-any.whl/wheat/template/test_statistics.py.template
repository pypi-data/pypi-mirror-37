import json

from nose.tools import assert_equals

from {PROJECT_NAME}.models.statistics import Statistics


def test_Statistics():
    """Check if `Statistics.__str__` works
    """
    expect_dict = {
        u'status': u'test', u'finish_time': None, u'theme': u'test',
        u'service': u'test', u'exception_info': None, u'instance_id': u'test',
        u'start_time': u'2017-09-09 00:00:00',
    }

    statistics = Statistics(
        start_time='2017-09-09 00:00:00',
        service='test', theme='test', status='test', instance_id='test'
    )

    assert_equals(json.loads(str(statistics)), expect_dict)
